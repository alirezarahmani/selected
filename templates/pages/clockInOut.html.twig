<body class="hold-transition layout-top-nav" onload="startTime()">
<div class="container" >

    <div class="row">
        <div class="col" style="height: 680px">
            <div class="boxShowTime">
                <p id="time"></p>
            </div>

            <div id="msgClockOut" class="designClock" style="display: none">
                <p> You're clocked-out have a great day </p>
            </div>

            <div id="msgClockIn" class="designClock" style="display: none">
                <p> You're clocked-in smile for the picture</p>
            </div>

            <div id="msgTakeBreak" class="disignBreak" style="display: none">
                <p>You're break has started enjoy your time</p>
            </div>

            <div id="msgFinishBreak" class="disignBreak" style="display: none">
                <p>You're break is finished enjoy the rest of your shift</p>
            </div>

            <div id="msgOptions" class="msgShowOptions" style="display: none">
                <p>Please selected option</p>
            </div>

            <div id="currentSchedule" class="msgShowSchedule" style="display: none">
                <p>Please selected right schedule</p>
            </div>

            <div id="msgErrorBreak" class="disignBreak" style="display: none;">
                <p style=" margin-top: -10px !important;" class="text-capitalize">you cannot register break start after clock-out</p>
            </div>

            <div class="usersInfo" style="display: block">
                <p id="fullnameUsers" class="text-capitalize"></p>
                <p id="jobSiteUsers" class="text-capitalize"></p>
            </div>

            <div class="showImage">
                <video id="video" height="400" autoplay></video>
                <canvas id="canvas" height="400" width="533"></canvas>
            </div>

            <div class="showBTN" id="showBreak" style="display: none">
                <button class="btn clockIn clockInAction" onmouseout="hidePopover()" onmouseover="showPopover()" >Clock In</button>
                <button class="btn break breakAction" onmouseout="hidePopoverBreak()" onmouseover="showPopoverBreak()">Break</button>
                <button class="btn clockOut clockOutAction" onmouseout="hidePopover2()" onmouseover="showPopover2()">Clock Out</button>
                <div class="btn popoverClockBreak">CLOCK IN</div>
                <div class="btn popoverBreak">Take Break</div>
                <div class="btn popoverBreak2">Finish Break</div>
                <div class="btn popoverClockBreak2">CLOCK OUT</div>
            </div>

            <div class="showBTN" id="notSchedule" style="display: none">
                <div class="boxShowSchedule">
                    <span class="fas fa-exclamation-triangle mr-3 iconNotScheduler"></span>
                    <span class="textNotSchedule"> You're not scheduled today. </span>
                </div>
            </div>

        </div>

    </div>

    <select class="form-control selectSchedule2 mt-3 " style="display: none">
        <option selected>Select schedule</option>
